<div class="lecturer_dashboard">

    <!-- Welcome Section -->
    <div class="welcome_section_lecturer">
        <h2>Welcome, New Lecturer!</h2>
        <p>Submit your monthly claims and track their approval status quickly and efficiently.</p>
    </div>

    <!-- How It Works Section -->
    <div class="how_it_works_lecturer">
        <h3>How It Works</h3>
        <div class="steps_grid">
            <div class="step_card">
                <h4>1. Submit Claim</h4>
                <p>Provide session details, module, hours, and attach supporting documents.</p>
            </div>
            <div class="step_card">
                <h4>2. Coordinator Review</h4>
                <p>Your Programme Coordinator will review and approve or return the claim.</p>
            </div>
            <div class="step_card">
                <h4>3. Manager Approval</h4>
                <p>The Academic Manager gives the final approval before processing.</p>
            </div>
        </div>
    </div>

    <!--Creating the form-->
  <div class="form_container">
        <h3>Start Claiming</h3>

        

        <form method="post" class="lecture_form">
           
            <div class="roww">
                <label>Lecture name</label>
                <input placeholder="Enter your name" required />
            </div>

            <div class="roww">

                <label>Employee number</label>
                <input placeholder="Enter your employee number" required />
            </div>


            <div class="roww">
            <label>Module name</label>
            <input placeholder="Enter Module name eg. prog" required />
            </div>


            <div class="roww">
                <label>Hourly rate</label>
                <input type="text" placeholder="eg. 17" required />
            </div>

            <div class="roww">
            <label>Number of sessions</label>
            <input type="number" placeholder="eg. 17" required />
            </div>

            <div class="roww">
            <label>Claim period From</label>
            <input type="date"  required />
            </div>
            <div class="roww">
            <label>Claim period To</label>
            <input type="date" required />
            </div>

            <div class="roww">
            <label>Upload documents</label>
            <input type="file" required />
            </div>

            <div class="submit_button">
               <button type="submit">Submit claim</button>
            </div>

            <div class="Viewlink">
                <a href="@Url.Action("ViewHistory","Users")">View Claim History</a>
            </div>
        </form>
  </div>
    

</div>




