@model POE_MVC_part1.Models.GetUserInfo
<link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
@Html.Partial("_NavigationBars")

<section class="edit-lecturer-section">
    <h2>Edit Lecturer Info</h2>

    <div class="back_link">
        <a href="@Url.Action("ManageLectures", "HumanResourceDepartment")">
            &larr; Back
        </a>
    </div>

    <div class="form-container">
        <form asp-action="EditLecturer" method="post">
            <input type="hidden" name="EmployeeNum" value="@Model.EmployeeNum" />

            <div class="form-group">
                <label>Name</label>
                <input class="form-control" name="Name" value="@Model.Name" />
            </div>

            <div class="form-group">
                <label>Last Name</label>
                <input class="form-control" name="LastName" value="@Model.LastName" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <input class="form-control" name="Email" value="@Model.Email" />
            </div>

            <button type="submit" class="btn-save">
                Save Changes
            </button>
        </form>

        <div class="tips-box">
            <h4>Tips:</h4>
            <ul>
                <li>Make sure the email address is valid and active.</li>
                <li>Double-check the spelling of names before saving.</li>
                <li>Changes will immediately reflect in the Manage Lecturers table.</li>
            </ul>
        </div>
    </div>
</section>


